            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.YearsAtCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.YearsInCurrentRole)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@emp.EmployeeNumber">Edit</a>
